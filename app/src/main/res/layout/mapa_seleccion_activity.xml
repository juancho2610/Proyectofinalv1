<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    android:padding="16dp">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarMapaSL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/verdecardenal"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:elevation="4dp"/>

    <Button
        android:id="@+id/buttonMapaChapinero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/verdecardenal"
        android:text="Chapinero"
        android:layout_marginBottom="16dp"/>


    <Button
        android:id="@+id/buttonMapaKennedy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/verdecardenal"
        android:text="Kennedy"
        android:layout_marginBottom="16dp"/>


    <Button
        android:id="@+id/buttonMapaCuidadBolivar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/verdecardenal"
        android:text="Cuidad Bolivar"
        android:layout_marginBottom="16dp"/>


    <Button
        android:id="@+id/buttonMapaSuba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/verdecardenal"
        android:text="Suba"
        android:layout_marginBottom="16dp"/>

</LinearLayout>