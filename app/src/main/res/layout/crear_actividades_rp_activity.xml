<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    android:padding="16dp">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarCrearActividades_CA_RP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_dynamic_primary30"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:elevation="4dp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/buttonCrearActividades_CA_RP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear Actividades"
        android:backgroundTint="@color/material_dynamic_primary30"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/buttonCrearDeportes_CA_RP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear Deportes"
        android:backgroundTint="@color/material_dynamic_primary30"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnReservarRP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reserva"
        android:backgroundTint="@color/material_dynamic_primary30"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnMapaRP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mapa"
        android:backgroundTint="@color/material_dynamic_primary30"/>


</LinearLayout>