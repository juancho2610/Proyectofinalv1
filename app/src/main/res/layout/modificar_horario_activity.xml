<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modificar Horario"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarCrearActividades_ver_horario_mod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/azure"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:elevation="4dp"/>

    <Button
        android:id="@+id/btnSeleccionarFecha_mod_horario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/beige"
        android:textColor="@color/black"
        android:text="Seleccionar Fecha" />

    <TextView
        android:id="@+id/textViewFecha_mod_horario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha seleccionada" />

    <Button
        android:id="@+id/btnSeleccionarHora_mod_horario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/beige"
        android:textColor="@color/black"
        android:text="Seleccionar Hora" />

    <TextView
        android:id="@+id/textViewHora_mod_horario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hora seleccionada" />

    <Spinner
        android:id="@+id/spinnerLocalidad_mod_horario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnGuardarCambios_mod_horario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/beige"
        android:textColor="@color/black"
        android:text="Guardar Cambios" />

</LinearLayout>