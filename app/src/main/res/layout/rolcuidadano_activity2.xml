<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".RolCuidadano">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarCrearActividades_CA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/coral"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:elevation="4dp"/>


    <Button
        android:id="@+id/buttonCrearActividad_cuidadano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/coral"
        android:textColor="@color/black"
        android:text="Crear Actividad"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/buttonVerActividades_cuidadano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/coral"
        android:textColor="@color/black"
        android:text="Actividades Recientes"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/buttonModificarActividad_cuidadano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/coral"
        android:textColor="@color/black"
        android:text="Modificar Actividad"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/buttonEliminarActividad_cuidadano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/coral"
        android:textColor="@color/black"
        android:text="Eliminar Actividad"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/buttonVotarActividad_cuidadano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/coral"
        android:textColor="@color/black"
        android:text="Votar Actividad"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/buttonVotarActividadEliminar_cuidadano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/coral"
        android:textColor="@color/black"
        android:text="Eliminar Voto"
        android:layout_marginBottom="16dp"/>

</LinearLayout>